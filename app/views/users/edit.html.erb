<div class="container">
  <div class="row">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center rounded px-0 p-5">
      <h5 class="text-dark bg-light border rounded-lg py-4 mb-0">プロフィール編集</h5>
      <div class="form-body border rounded-lg p-3">
        <%= form_with model: @user, local: true do |f| %>
          <%= attachment_image_tag @user, :profile_image, :fill, 160, 160, fallback: ""%>
          <div class="input-group my-3">
            <div class="image_wrapper">
                       <div class="item_image_btn">
                          <%= f.attachment_field :profile_image, id: "file" %>
                       </div>
                       <div id="img_field" onClick="$('#file').click()" >
                          <p>画像を選択してください</p>
                       </div>
                    </div>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :nickname, autofocus: true, class:"form-control", id:"inputName", placeholder:"名前"%>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputName", placeholder:"自己紹介文"%>
          </div>

          <%= f.submit "             変更を保存           ", class:'btn btn-primary'%>
        <% end %>
      </div>
    </div>
  </div>
</div>