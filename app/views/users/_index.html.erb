      <div class="col-md-12">
      <div class="d-flex flex-wrap ">
    <% users.each do |user| %>
       <div class="w-100 my-box border p-4">
        <%= link_to  user_path(user), class: "user_#{user.id}" do%>
        <%= attachment_image_tag user, :profile_image, :fill, 90, 90, fallback: "no_image_icon.jpg",size:'90x90',class:"rounded-circle";%>
        <h3><%= user.nickname %></h3>
        <% end %>
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to " フォロー中 ", user_relationships_path(user.id), method: :delete, class: "btn btn-outline-secondary mt-3" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-outline-secondary mt-3" %>
            <% end %>
          <% end %>
      </div>
    <% end %>
  </div>
  </div>