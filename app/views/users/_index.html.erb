      <div class="col-md-8 offset-md-2">
      <div class="d-flex flex-wrap ">
    <% users.each do |user| %>
       <div class="w-100 my-box border p-4">
        <%= link_to  user_path(user), class: "user_#{user.id}" do%>
        <%= attachment_image_tag user, :profile_image, :fill, 90, 90, fallback: "no-image-icon.jpg",class:"rounded-circle";%>
        <h2><%= user.nickname %></h2>
        <% end %>
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-outline-secondary mt-5" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-outline-secondary mt-5" %>
            <% end %>
          <% end %>
      </div>
    <% end %>
  </div>
  </div>