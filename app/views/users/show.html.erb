<div class="container-profile bg-light border py-2">
 <div class="columns is-multiline">
  <div class="row">
     <div class="col-md-3"></div>
     <div class="col-md-8">
  <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image_icon.jpg",size:'140x140', class:"rounded-circle"; %>
  <h1><%= @user.nickname %></h1>
  <% if @user.id == current_user.id %>
    <div class="mt-auto">
    <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-outline-secondary mt-5" %></p>
    </div>
  <% end %>
     </div>
   </div>
  </div>
 </div>
 
<div class="container-fluid bg-light py-4">
 <div class="columns is-multiline">
  <div class="row">
     <div class="col-md-3"></div>
     <div class="col-md-8">
       
     <div class="d-flex flex-wrap ">
        <% @articles.each do |a| %>
          <div class="my-box w-25 border">
            <%= attachment_image_tag a, :image, fallback: "no_image.jpg", size:'230x200' %>
            <%= image_tag('') %>
            <h3><%= a.title %></h3><br />
            <h6><%= a.body %></h6><br />
            <%= link_to "詳細", articles_path, class: "btn btn-outline-secondary mt-2" %><br />
            <div class="col-2">
            <%= attachment_image_tag a.user, :profile_image, fallback: "no_image.jpg", size:'60x60', class:"mt-3 rounded-circle"; %>
            </div>
            <%#= a.user.nickname %>
          </div> 
        <% end %>
      </div>
      
     </div>  
   </div>
  </div>
  </div>
<%= paginate @articles %>
</div>