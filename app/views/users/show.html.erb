<div class="container-profile bg-light border py-2">
 <div class="columns is-multiline">
  <div class="row">
     <div class="col-md-3"></div>
     <div class="col-md-8">
  <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image_icon.jpg",size:'140x140', class:"rounded-circle"; %>
  <h1><%= @user.nickname %></h1>
  <% if @user.id == current_user.id %>
    <div class="mt-auto">
    <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-outline-secondary mt-5" %></p>
    </div>
  <% end %>
     </div>
   </div>
  </div>
 </div>
 
<div class="container-fluid bg-light py-4">
 <div class="columns is-multiline">
  <div class="row">
     <div class="col-md-3"></div>
     <div class="col-md-8">
        
      <div class="d-flex flex-wrap ">
        <% @articles.each do |article| %>
          <div class="my-box w-25 border">
            <%= attachment_image_tag article, :image, fallback: "no_image.jpg", size:'230x230' %>
            <%= image_tag('') %>
           <div class = col-3>
            <h3><%= article.title %></h3><br />
           </div>
           <div class= col-6>
            <%= link_to "      詳細      ", article_path(article), class: "btn btn-outline-secondary" %><br />
           </div>
              <div class = "border-top" >
                 <div class = col-3>
                    <%= attachment_image_tag article.user, :profile_image, fallback: "no_image_icon.jpg", size:'60x60', class:"mt-3 rounded-circle"; %>
                    <p class= "text-center"><%= article.user.nickname %></p>
                 </div>
              </div>
          </div>
         
            
        <% end %>
      </div>
      
     </div>  
   </div>
  </div>
  <%= paginate @articles %>
</div>

