<!DOCTYPE html>
<html>
  <head>
    <title>Invester.Com</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>インベスター.com</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>
      <li><%= link_to "投稿する", new_article_path %></li>
      <li><%= link_to "マイページ", user_path(current_user.id) %></li>
      <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
      <li><%= link_to "ヘルプ", inquires_path %></li>
    <% else %>
      <li><%= link_to "新規登録", new_user_registration_path %></li>
      <li><%= link_to "ログイン", new_user_session_path %></li>
    <% end %>
    </ul>
　　　<%= search_form_for @search, url:articles_path do |f| %>
　　　<%= f.search_field :title_cont %>
　　　<%= f.submit "🔍" ,class: 'btn btn-white'%>
　　　<% end %>
      </div>
    </div>
  </nav>
</header>
    
  
  <body>
    <%= yield %>
  </body>
</html>