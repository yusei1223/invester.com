<% if user_signed_in? %>
     <% if article.favorited_by?(current_user) %>
          <%= link_to article_favorites_path(article), method: :delete, remote: true do %>
          <i class="fas fa-heart" style="color:orangered;"><%= article.favorites.count%></i>
          <% end %>
     <% else %>
          <%= link_to article_favorites_path(article), method: :post, remote: true do %>
           <i class="far fa-heart" style="color:lightslategray;"><%= article.favorites.count%></i>
          <% end %>
     <% end %>
<% else %>
          <%= link_to article.favorites.count, article_favorites_path(article), method: :post, remote: true, class: "fas fa-heart" %>
<% end %>