<% if user_signed_in? %>
     <% if article.favorited_by?(current_user) %>
          <%= link_to article.favorites.count, article_favorites_path(article), method: :delete, remote: true, class: "fas fa-heart" %>
     <% else %>
          <%= link_to article.favorites.count, article_favorites_path(article), method: :post, remote: true, class: "fas fa-heart" %>
     <% end %>
<% else %>
   <%= article.favorites.count %>
<% end %>