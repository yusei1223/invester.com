<% if article.favorited_by?(current_user) %>
  <%= link_to article.favorites.count, article_favorites_path(article), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
<% else %>
  <%= link_to a.favorites.count, article_favorites_path(article), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
<% end %>