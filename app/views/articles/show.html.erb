<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
  		<h2>投稿内容</h2>
  		<table class='table'>
  		  <tr>
  		    <th><%= link_to user_path(@article.user) do %>
            <%= attachment_image_tag @article.user, :profile_image, fallback: "no_image_icon.jpg", size:'60x60', class:"mt-3 rounded-circle";%>
            <%= @article.user.nickname %>
            <% end %>
          </th>
        </tr>
        <tr>
          <td style="font-size : 40px;"><%= @article.title %></td>
        </tr>
          <td><%= @article.body %></td>
          <% if @article.user == current_user %>
            <td><%= link_to 'Edit', edit_article_path(@article), class: "btn btn-sm btn-success edit_article_#{@article.id}" %></td>
            <td><%= link_to 'Destroy', article_path(@article), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger "%></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>