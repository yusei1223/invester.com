<div class='container p-4'>
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
  		<h2>投稿記事詳細画面</h2><br />
  		<table class='table'>
  		  <tr>
          <th>
          <% @article.categories.each do |category| %>
          【カテゴリー】<%= category.name %>
          <% end %>
          </th>
  		    <tr>
              <td style="font-size : 30px;"><%= @article.title %></td>
          </tr>
          <th>
  		      <%= link_to user_path(@article.user) do %>
            <%= attachment_image_tag @article.user, :profile_image, fallback: "no_image_icon.jpg", size:'40x40', class:"mt-3 rounded-circle";%>
            <%= @article.user.nickname %>
            <% end %>
            <p><%= @article.created_at.strftime('%Y/%m/%d') %></p>
          </th>
          </tr>

          <td><%= @article.body %></td>
          <% if @article.user == current_user %>
            <%= link_to '記事を編集する', edit_article_path(@article), class: "btn btn-sm btn-success edit_article_#{@article.id}" %>
            <%= link_to '記事を削除する', article_path(@article), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger "%>
          <% else %>
            <div id="bookmark_<%= @article.id %>">
              <%= render partial: 'bookmarks/bookmark_area', locals: {bookmarks: @bookmarks } %>
            </div>
          <% end %>
      </table>
      <table id="article_<%= @article.id %>">
        <div class="comments">
          <%= render partial: 'comments/index', locals: { comments: @comments } %>
        </div>
      </table>
         <div class="new-comment">
              <%= form_with model:[@article, @comment] do |f| %>
              <%= f.text_area :body, size:"90x5",placeholder: "コメントをここに" %>
              <p><%= f.submit "       送信する      ", class:'btn btn-primary'%></p>
              <% end %>
         </div>
    </div>
  </div>
</div>