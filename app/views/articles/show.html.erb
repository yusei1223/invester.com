<div class='container'>
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
  		<h2>投稿記事詳細画面</h2><br />
  		<table class='table'>
  		  <tr>
  		    <th>
  		      <%= link_to user_path(@article.user) do %>
            <%= attachment_image_tag @article.user, :profile_image, fallback: "no_image_icon.jpg", size:'60x60', class:"mt-3 rounded-circle";%>
            <%= @article.user.nickname %>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>
          <% @article.categories.each do |category| %>
          <%= category.name %>
          <% end %>
          </th>
        </tr>
        <tr>
          <td style="font-size : 40px;"><%= @article.title %></td>
        </tr>
          <td><%= @article.body %></td>
          <% if @article.user == current_user %>
            <%= link_to '記事を編集する', edit_article_path(@article), class: "btn btn-sm btn-success edit_article_#{@article.id}" %>
            <%= link_to '記事を削除する', article_path(@article), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger "%>
          <% end %>
        </tr>
      </table>
      <table id="comments_area ">
          <%= render partial: 'comments/index', locals: { comments: @comments } %>
      </table>
         <div class="new-comment">
              <%= form_with model:[@article, @comment] do |f| %>
              <%= f.text_area :body, size:"90x5",placeholder: "コメントをここに" %>
              <%= f.submit "送信する" %>
              <% end %>
         </div>
    </div>
  </div>
</div>