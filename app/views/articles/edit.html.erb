<div class='container-fluid p-5'>
  <div class='row'>
    <div class="ol-md-9 col-lg-9 px-5 px-sm-0 mx-auto">
  		<h1>記事編集</h1>
    	<%#= render 'layouts/errors', obj: @article %>
  		<%= form_for @article, url: article_path do |f| %>
           <h4>イメージ画像</h4>
           <%#= f.attachment_field :image %>
             <div class="form-group">
               <h4>タイトル</h4>
               <%= f.text_field :title,size: "20x10",class: "form-control" %>
               <h4>内容</h4>
               <%= f.text_area :body,size: "30x20", class: "form-control" %>
             </div>
             <br>
             <%= f.hidden_field :id %>
            <%= f.submit "       投稿を編集する      ", class: 'btn btn-primary'%>
         <% end %>
         <br>
  		<%= link_to '記事へ', article_path(@article),class: 'btn btn-secondary'%>
  		<%= link_to '一覧へ戻る', articles_path,class: 'btn btn-secondary'%>
  </div>
 </div>
</div>