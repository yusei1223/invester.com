<div id="bookmark_<%= @article.id %>">
<% if bookmark.article.bookmarked_by?(current_user) %>
    <%= link_to "ブックマークから外す", article_bookmarks_path(bookmark.id), method: :delete, remote: true, class:"btn btn-primary md-6" %>
<% else %>
    <%= link_to "ブックマークに登録する", article_bookmarks_path(bookmark.id), method: :post, remote: true, class:"btn btn-primary md-6" %>
<% end %>
</div>