<div class="container p-4">
  <div class="row">
    <div class="col-12">

<%= form_with model: @article, url:'/articles', local:true do |f| %>
  <h1>新規投稿</h1>
  
  <h5>イメージ画像</h5>
  <%= f.attachment_field :image %>
  <div class="form-group">
   <h5> <%= f.label :category, 'カテゴリ' %></h5>
        <%= f.collection_select :category_ids, Category.all, :id, :name, :include_blank => "カテゴリを選択してください" %>
  <h5>タイトル</h5>
  <%= f.text_field :title,size: "20x10",class: "form-control" %>
  <h5>内容</h5>
  <%= f.text_area :body,size: "30x15", class: "form-control" %>
  </div>
  <br>
  <%= f.submit "       投稿する      ", class:'btn btn-primary'%>
<% end %>

   </div>
  </div>
</div>