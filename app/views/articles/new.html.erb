<div class="container">
  <div class="row">
    <div class="col-12">
    


<%= form_with model: @article, url:'/articles', local:true do |f| %>
  <h1>新規投稿</h1>
  
  <h4>イメージ画像</h4>
  <%= f.attachment_field :image %>
  <div class="form-group">
  <h4>タイトル</h4>
  <%= f.text_field :title,size: "20x10",class: "form-control" %>
  <h4>内容</h4>
  <%= f.text_area :body,size: "30x20", class: "form-control" %>
  </div>
  <br>
  <%= f.submit "       投稿する      ", class:'btn btn-primary'%>
<% end %>

   </div>
  </div>
</div>