<div class='container-fluid p-5'>
  <div class='row'>
    <div class="ol-md-9 col-lg-9 px-5 px-sm-0 mx-auto">

<%= form_with model: @article, url:'/articles', local:true do |f| %>
<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |message| %>
    <div style="color:red;"><%= message %></div>
  <% end %>
<% end %>
  <h3>記事を投稿しよう！</h3>
 <hr>
  <h5>イメージ画像</h5>
  <%= f.attachment_field :image %>
  <div class="form-group">
  <div>
   <h5><%= f.label :category, 'カテゴリ' %></h5>
   <%= f.collection_select :category_ids, Category.all, :id, :name, :include_blank => "カテゴリを選択してください" %>
   </div>
  <h5>タイトル</h5>
  <%= f.text_field :title,size: "20x10",class: "form-control" %>
  <h5>内容</h5>
  <%= f.text_area :body,size: "30x20", class:"form-control" %>
  </div>
  <br>
  <%= f.submit "       投稿する      ", class:"btn btn-primary"%>
<% end %>

   </div>
  </div>
</div>