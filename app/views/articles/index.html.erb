<div class="container px-5 pb-5">
　<h4 class="pt-3">New！</h4>
  <div class="swiper-container">
    <div class="swiper-wrapper">
      <% @newarticles.each do |article| %>
      <div class="swiper-slide">
        <%= link_to article_path(article) do %>
        <%= attachment_image_tag article, :image, fallback: "no_image.jpg",size:'300x230', class:"rounded"; %>
        <%= article.title %>
        <% end %>
        </div>
      <% end %>
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
  <hr>
  <div class= "btn btn-outline-secondary">
    <%= link_to '米国株式',{:controller=>"articles",:action=>"index",:q=>{:category=>'米国株式'}}%>
  </div>
  <div class= "btn btn-outline-secondary">
    <%= link_to '日本株式',{:controller=>"articles",:action=>"index",:q=>{:category=>'日本株式'}}%>
  </div>
    <%= sort_link(@search, :updated_at, "作成日") %>
  <div class="row">
     <% @search_articles.each do |article| %>
    <div class="col-lg-4 col-sm-6 mb-4">
      <div class="card h-100">
             <%= link_to article_path(article) do %>
             <%= attachment_image_tag article, :image, fallback: "no_image.jpg", size:'325x230', class:"rounded"; %>
             <%= image_tag('') %>
          <h4 class="card-title">
             <%= article.title %>
          </h4>
             <% end %>
          <p class="card-text">
             <%= article.body %>
          </p>
          <div class="card-footer">
                            <%= link_to user_path(article.user) do %>
                                  <%= attachment_image_tag article.user, :profile_image, fallback: "no_image_icon.jpg", size:'50x50', class:"mt-3 rounded-circle";%>
                                  <%= article.user.nickname %>
                            <% end %>
                            <div class="row col-lg-6">
                                <div>
                                    <%= link_to "#{article.comments.count}", article_path(article.id), class: "fas fa-comment" %>
                                </div>
                                <div id="favorites_buttons_<%= article.id %>">
                                    <%= render "favorites/favorite", article: article %>
                                </div>
                            </div>
          </div>
      </div>
    </div>
    <%end%>
  </div>

<%= paginate @search_articles %>