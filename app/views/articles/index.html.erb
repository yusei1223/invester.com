<div class="container-fluid bg-light p-5">
 <div class="columns is-multiline">
  <div class="row">

       <div class='col-md-2'>
         <div class="my-box w-20 border">
            <ul class="list-group">
               <li class="list-group-item">日本株式</li>
               <li class="list-group-item">外国株式</li>
               <li class="list-group-item">暗号資産</li>
               <li class="list-group-item">その他</li>
            </ul>
         </div>
        </div>
     <div class="col-md-7 offset-md-1">
       <div class="d-flex ustify-content-around flex-wrap">
        <% @search_articles.each do |article| %>
           <div class="my-box w-50 border">
            <%= link_to article_path(article) do %>
            <%= attachment_image_tag article, :image, fallback: "no_image.jpg", size:'385x300' %>
            <%= image_tag('') %>
            <div class = col-12>
            <p><%= article.title %></p><br />
            <% end %>
           </div>
           <div class = col-6>
            <%= link_to "#{article.comments.count}", article_path(article.id), class: "fas fa-comment" %>
               <div id="favorites_buttons_<%= article.id %>">
                 <%= render "favorites/favorite", article: article %>
               </div>
               <div>
                  <%= link_to user_path(article.user) do %>
                  <%= attachment_image_tag article.user, :profile_image, fallback: "no_image_icon.jpg", size:'50x50', class:"mt-3 rounded-circle";%>
                  <%= article.user.nickname %>
                  <% end %>
               </div>
           </div>
       </div>


        <% end %>
      </div>

     </div>
   </div>
  </div>
</div>