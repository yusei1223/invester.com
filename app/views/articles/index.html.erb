<div class="container pt-5">
  <div class="row">
    <div class="col-md-8">
　  <h4 class="pt-5">New！</h4>
        <div class="swiper-container">
        <div class="swiper-wrapper">
          <% @newarticles.each do |article| %>
             <div class="swiper-slide">
             <%= link_to article_path(article) do %>
             <%= attachment_image_tag article, :image, fallback: "no_image.png",size:"323x230", class:"rounded"; %>
             <%= article.title %>
             <% end %>
             </div>
          <% end %>
        </div>
           <div class="swiper-button-next"></div>
          <div class="swiper-button-prev"></div>
       </div>
      </div>

   <div class="col-md-4">
      <div class="rank" >
         <div class="card my-4">
         <% @all_ranks.each.with_index(1) do |article, i| %>
         <h5 class="card-header">
         第 <%= i %> 位
         <%= article.user.nickname %>さん
         </h5>
            <div class="card shadow-lg">
              <%= attachment_image_tag article, :image, fallback: "no_image.png",size:'75x75', class:"rounded"; %>
　          </div>
         <% end %>
         </div>
      </div>
   </div>

　</div>
<div class="container pb-5">
  <hr>
    <%= sort_link(@search, :updated_at, "作成日") %>
  <div class="row">
     <% @search_articles.each do |article| %>
    <div class="col-lg-4 col-sm-6 mb-4">
      <div class="card h-100">
             <%= link_to article_path(article) do %>
             <%= attachment_image_tag article, :image,:fill, 348,230, fallback: "no_image.png", class:"rounded"; %>
             <%= image_tag('') %>
          <h4 class="card-title">
             <%= article.title %>
          </h4>
             <% end %>
          <p class="card-text">
             <%= article.body %>
          </p>
          <div class="card-footer">
                            <%= link_to user_path(article.user) do %>
                                  <%= attachment_image_tag article.user, :profile_image, fallback: "no_image_icon.jpg", size:'50x50', class:"mt-3 rounded-circle";%>
                                  <%= article.user.nickname %>
                            <% end %>
                            <div class="row col-lg-6">
                                <div>
                                    <%= link_to "#{article.comments.count}", article_path(article.id), class: "fas fa-comment" %>
                                </div>
                                <div id="favorites_buttons_<%= article.id %>">
                                    <%= render "favorites/favorite", article: article %>
                                </div>
                            </div>
          </div>
      </div>
    </div>
    <%end%>
  </div>

<%= paginate @search_articles %>
</div>