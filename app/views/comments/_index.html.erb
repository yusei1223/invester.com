<div class="media mb-8">
   <% @article.comments.each do |comment| %>
      <% comment_user = comment.user %>
        <div class="d-flex mr-4">
    		<%= attachment_image_tag comment.user, :profile_image, :fill, 70, 70, fallback: "no_image.jpg", size: "70x70",class:"mt-3 rounded-circle"; %>
    		</div>
    		  <div class="media-body">
    		    <h5 class="mt-4"><%= comment.user.nickname %></h5>
    		       <p><%= comment.body %><p>
    		       <p><%= comment.created_at.strftime('%Y/%m/%d') %></p>
  	           <% if current_user == comment_user %>
    	         <%= link_to 'Destroy', article_comment_path(comment.article_id, comment.id), class: 'btn-sm btn-danger', method: :delete, remote: true %>
  	           <% end %>
          </div>
    <% end %>
</div>